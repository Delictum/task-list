<p id="notice"><%= notice %></p>

<h1>Stories</h1>
<br>

<%= link_to 'New Story', new_task_path %>
<br>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.subject %></td>
        <td><%= render 'tasks/status', task: story %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

