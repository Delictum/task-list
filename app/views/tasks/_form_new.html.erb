<%= simple_form_for @task do |f| %>
  <%= f.error_notification %>

  <%= f.input :subject, input_html: {value: task.subject} %>
  <%= f.input :description, input_html: {value: task.description} %>
  <%= f.input :status, :as => :hidden, :input_html => { value: 0 } %>
  <%= f.input :type, collection: { 'Issue' => 'Issue', 'Story' => 'Story' }, :multiple => true, :selected => [task.type] %>
  <%= f.input :user_id, collection: User.all, :label_method => :email, :value_method => :id, :multiple => true, :selected => [task.user_id] %>
  <%= f.input :admin_id, :as => :hidden, :input_html => { value: current_admin.id } %>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>