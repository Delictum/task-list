<% if admin_signed_in? %>
  <p><%= link_to 'New task', new_task_path %></p>
<% end %>

<br>

<table class="table table-bordered table-striped table-condensed table-hover">
  <thead>
  <tr>
    <th>Subject</th>
    <th>Status</th>
    <th>Type</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.subject %></td>
      <td><%= render 'status', task: task %></td>
      <td><%= task.type %></td>
      <% if task.type == 'Issue' %>
        <td><%= link_to 'Show', issue_path(task) %></td>
        <td><%= link_to 'Edit', edit_issue_path(task) %></td>
        <td><%= link_to 'Destroy', issue_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% elsif task.type == 'Story' %>
        <td><%= link_to 'Show', story_path(task) %></td>
        <td><%= link_to 'Edit', edit_story_path(task) %></td>
        <td><%= link_to 'Destroy', story_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>