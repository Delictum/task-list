<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#"><%= link_to "Task List", home_path, id: "logo" %></a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to "About",   about_path %></li>

          <% if user_signed_in? or admin_signed_in? %>
            <li><%= link_to "Tasks",   tasks_path %></li>
          <% end %>

          <% if user_signed_in? %>
            <li><p style="color: #f0f0f0"><%= current_user.email %></p></li>
            <li><%= link_to 'Sign Out', '/users/sign_out', method: :delete %></li>
          <% elsif admin_signed_in? %>
            <li><%= link_to "Dashboard",   dashboard_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Users",   users_path %></li>
                <li><%= link_to "Admins",   admins_path %></li>
                <li><%= link_to 'Comments', comments_path %></li>
              </ul>
            </li>
            <li><p style="color: #f0f0f0"><%= current_admin.email %></p></li>
            <li><%= link_to 'Sign Out', '/admins/sign_out', method: :delete %></li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Auth <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Sing In as user', '/users/sign_in' %></li>
                <li><%= link_to 'Sing Up as user', '/users/sign_up' %></li>
                <li class="divider"></li>
                <li><%= link_to 'Sing In as admin', '/admins/sign_in' %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </div>
</header>